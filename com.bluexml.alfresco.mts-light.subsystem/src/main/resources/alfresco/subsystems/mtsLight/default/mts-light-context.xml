<beans>
		
	<bean id="transformer.bluexml.mtsLight.worker" class="com.bluexml.alfresco.mtslight.MTSLightContentTransformerWorker" >
    	
		<property name="nodeService" ref="NodeService"/>
		<property name="mimetypeService" ref="mimetypeService" />
		
		<property name="server" value="${mtslight.server}" />
		<property name="port" value="${mtslight.port}" />
		
	</bean>
    
	<bean id="transformer.bluexml.mtsLight" 
		  class="com.bluexml.alfresco.mtslight.MTSLightContentTransformer"
		  parent="baseContentTransformer" >
		
		<property name="worker" ref="transformer.bluexml.mtsLight.worker" />
		
		<property name="explicitTransformations">
			<list>
				<bean class="org.alfresco.repo.content.transform.ExplictTransformationDetails" >
					<constructor-arg>
						<value>application/msword</value>
					</constructor-arg>
					<constructor-arg>
						<value>application/pdf</value>
					</constructor-arg>
				</bean>
				<bean class="org.alfresco.repo.content.transform.ExplictTransformationDetails" >
					<constructor-arg>
						<value>application/vnd.openxmlformats-officedocument.wordprocessingml.document</value>
					</constructor-arg>
					<constructor-arg>
						<value>application/pdf</value>
					</constructor-arg>
				</bean>
				<bean class="org.alfresco.repo.content.transform.ExplictTransformationDetails" >
					<constructor-arg>
						<value>application/vnd.ms-excel</value>
					</constructor-arg>
					<constructor-arg>
						<value>application/pdf</value>
					</constructor-arg>
				</bean>
				<bean class="org.alfresco.repo.content.transform.ExplictTransformationDetails" >
					<constructor-arg>
						<value>application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</value>
					</constructor-arg>
					<constructor-arg>
						<value>application/pdf</value>
					</constructor-arg>
				</bean>
			</list>
		</property>		
	</bean>
    
    
    
</beans>
