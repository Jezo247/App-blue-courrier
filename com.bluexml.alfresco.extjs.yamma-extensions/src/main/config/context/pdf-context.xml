<beans>	

	<!-- 
	  - PDF MERGING MATERIAL
	  -->
	
	<bean id="MergerUtils" class="com.bluexml.alfresco.pdf.MergerUtils" >
		<property name="nodeService" ref="NodeService" />
		<property name="contentService" ref="ContentService" />
		<property name="mimetypeService" ref="MimetypeService" />
		<property name="copyService" ref="CopyService" />
		<property name="fileFolderService" ref="FileFolderService" />
	</bean>

	<alias name="itext.Merger" alias="PdfMerger" />

	<bean id="abstractPdfMerger" class="com.bluexml.alfresco.pdf.AbstractMerger" abstract="true">
		<property name="mergerUtils" ref="MergerUtils" />
	</bean>
	
	<!-- PDFBOX IMPLEMENTATION / NOT USED|WORKING YET -->
	
	<bean id="pdfbox.InputSourceFactory" class="com.bluexml.alfresco.pdf.pdfbox.InputSourceFactory">
		<property name="fileFolderService" ref="FileFolderService" />		
	</bean>
	
	<bean id="pdfbox.Merger" class="com.bluexml.alfresco.pdf.pdfbox.PdfBoxMerger" parent="abstractPdfMerger">
		<property name="inputSourceFactory" ref="pdfbox.InputSourceFactory" />
		<property name="referenceProviderService" ref="referenceProviderService" />
	</bean>

	<!-- ITEXT IMPLEMENTATION -->
	
	<bean id="itext.InputSourceFactory" class="com.bluexml.alfresco.pdf.itext.InputSourceFactory">
		<property name="fileFolderService" ref="FileFolderService" />		
	</bean>
	
	<bean id="itext.Merger" class="com.bluexml.alfresco.pdf.itext.ITextMerger" parent="abstractPdfMerger">
		<property name="inputSourceFactory" ref="itext.InputSourceFactory" />
	</bean>
	
	<bean id="itext.AbstractExtension" class="com.bluexml.alfresco.pdf.itext.AbstractITextExtension" init-method="register" abstract="true" >
		<property name="merger" ref="itext.Merger" />
	</bean>
		 
	<!-- 
	  - JAVASCRIPT HELPER
	  -->
	  
	<bean id="pdfMergerScript" parent="baseJavaScriptExtension" class="com.bluexml.alfresco.pdf.jscript.PdfMergerScript" >
		<property name="extensionName" value="pdfMerger" />
		<property name="serviceRegistry" ref="ServiceRegistry"/>
		<property name="merger" ref="PdfMerger" />
	</bean>
	

	<!-- 
	  - WEBSCRIPTS
	  -->
	  
	<bean id="webscript.com.bluexml.pdf.mergetopdf.get" 
		  class="com.bluexml.alfresco.pdf.ws.MergeToPdf" 
		  parent="webscript">
				
		<property name="mimetypeService" ref="MimetypeService" />	
		<property name="merger" ref="PdfMerger" />
	</bean> 
	
	
</beans>
