<beans>

	<!-- 
	  - STORING CONFIG
	  -->

	<bean name="config.configSharedCache" class="org.alfresco.repo.cache.EhCacheAdapter">
		<property name="cache">
			<bean class="org.springframework.cache.ehcache.EhCacheFactoryBean">
				<property name="cacheManager">
					<ref bean="internalEHCacheManager" />
				</property>
				<property name="cacheName">
					<value>org.bluexml.alfresco.app.configObjectCache</value>
				</property>
			</bean>
		</property>
	</bean>

	<bean name="config.configCache" class="org.alfresco.repo.cache.TransactionalCache">
		<property name="sharedCache">
			<ref bean="config.configSharedCache" />
		</property>
		<property name="name">
			<value>org.bluexml.alfresco.app.configObjectTransactionCache</value>
		</property>
		<property name="maxCacheSize" value="100" />
		<property name="mutable" value="false" />
		<property name="disableSharedCache" value="${system.cache.disableImmutableSharedCaches}" />
	</bean>

	<bean id="GlobalConfig" class="com.bluexml.alfresco.app.GlobalConfig">
		<property name="nodeService" ref="nodeService" />
		<property name="namespacePrefixResolver" ref="namespaceService" />
		<property name="cache" ref="config.configCache" />
	</bean>
	
	<!-- 
	  - REFERENCE MATERIAL
	  -->
	  
	<bean id="referenceProviderService" class="com.bluexml.alfresco.reference.ReferenceProviderServiceImpl">
		<property name="nodeService" ref="NodeService" />
		<property name="searchService" ref="searchService" />		
		<property name="encodedProperty">
			<value>{http://www.bluexml.com/model/content/yamma-ee/1.0}Referenceable_internalReference</value>
		</property>		
	</bean>
	
	<bean id="abstractReferenceProvider"
		class="com.bluexml.alfresco.reference.AbstractReferenceProvider"
		init-method="register" 
		abstract="true">
		
		<property name="referenceProviderService" ref="referenceProviderService" />
	</bean>

	<!-- Incremental id-provider reference definition -->
	<bean id="configBasedIncrementalIdProvider"
		class="com.bluexml.alfresco.reference.ConfigIncrementalIdProvider"
		parent="abstractReferenceProvider">
		
		<property name="globalConfig" ref="GlobalConfig" />
		<property name="nodeService" ref="NodeService" />
	</bean>

	<!-- Script based reference definition -->
	<bean id="baseScriptReferenceProvider" 
	    class="com.bluexml.alfresco.reference.ScriptReferenceProvider"
		parent="abstractReferenceProvider" 
		abstract="true">
		
		<property name="scriptService" ref="ScriptService" />
		<property name="incrementalIdProvider" ref="configBasedIncrementalIdProvider" />
	</bean>

	<!-- 
	  - JAVASCRIPT INTEGRATION
	  -->
	  
	<bean id="referenceProviderScript" 
	    parent="baseJavaScriptExtension"
		class="com.bluexml.alfresco.reference.ReferenceProviderScript">
		
		<property name="extensionName" value="referenceProvider" />
		<property name="referenceProviderService" ref="referenceProviderService" />
		<property name="serviceRegistry" ref="ServiceRegistry" />
		
	</bean>

</beans>
