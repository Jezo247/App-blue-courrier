<webscript>
   <shortname>Category Management</shortname>
   
   <description><![CDATA[
   Create new category in specified category or as a root category.
   ]]></description>
   
   <url>/bluedolmen/category/{store_protocol}/{store_id}/{node_id}</url>
   <url>/bluedolmen/category</url>
   
   <format default="json">argument</format>
   
   <authentication>user</authentication>
   
   <transaction allow="readwrite" buffersize="0">required</transaction>
   
   <args>
      <arg>
         <shortname>store_protocol</shortname>
         <description>The protocol of the store in which the category lives.</description>
      </arg>
      <arg>
         <shortname>store_id</shortname>
         <description>The identifier of the store in which the category lives.</description>
      </arg>
      <arg>
         <shortname>node_id</shortname>
         <description>The identifier of the node that represents the category.</description>
      </arg>
   </args>
   
   <family>BlueDolmen</family>
   
</webscript>