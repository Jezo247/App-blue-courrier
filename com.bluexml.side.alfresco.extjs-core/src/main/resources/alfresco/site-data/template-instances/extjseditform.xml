<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>com/bluexml/extjs/extjsform</template-type>
	<properties>
		<pageFamily>ExtJS</pageFamily>
	</properties>
	
	<components>
		
		<component>
			<region-id>formPortlet</region-id>
			<url>/components/form?formId={formId}&amp;redirect={redirect}&amp;css={css}&amp;js={js}</url>
			
			<properties>
				<itemKind>node</itemKind>
				<itemId>{itemId}</itemId>
				<mode>edit</mode>
				<showCaption>true</showCaption>
				<showSubmitButton>true</showSubmitButton>
				<showCancelButton>{showCancelButton}</showCancelButton>
				<submitType>{submitType}</submitType>
			</properties>	
		</component>
		
	</components>    
</template-instance>
