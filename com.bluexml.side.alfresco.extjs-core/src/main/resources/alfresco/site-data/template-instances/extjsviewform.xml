<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>com/bluexml/extjs/cruform</template-type>
	<properties>
		<pageFamily>ExtJS</pageFamily>
	</properties>
	
	<components>
		<component>
			<region-id>formPortlet</region-id>
			<url>/components/form</url>
			
			<properties>
				<itemKind>node</itemKind>
				<itemId>{nodeRef}</itemId>
				<mode>view</mode>
				<showCaption>false</showCaption>
				<showSubmitButton>false</showSubmitButton>
				<showCancelButton>true</showCancelButton>
				<single>{single}</single>
			</properties>
			
		</component>
	</components>    
</template-instance>
