<page>
	
    <title>extjsedittask</title>
    <title-id>page.extjsedittask.title</title-id>
    <description>Gérer une tâche</description>
    <description-id>page.britairextjstask.description</description-id>
    <template-instance>britairextjstask</template-instance>
    <authentication>user</authentication>
        
    <components>
        <component>
            <region-id>data-form</region-id>
            <url>/components/form?redirect={redirect}</url>
            
            <properties>
                <itemKind>task</itemKind>
                <itemId>{taskId}</itemId>
                <mode>edit</mode>
                <formUI>true</formUI>
                <submitType>json</submitType>
                <showCaption>true</showCaption>
                <showSubmitButton>false</showSubmitButton>
                <showCancelButton>false</showCancelButton>
            </properties>
        </component>

